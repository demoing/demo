<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_show"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="bawei.demotwo.ShowActivity">

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50px">
    <ImageView
        android:id="@+id/back_show"
        android:src="@drawable/back_normal"
        android:layout_width="50px"
        android:layout_height="50px"/>
    <TextView
        android:text="商品详情"
        android:layout_weight="5"
        android:layout_width="0px"
        android:gravity="center"
        android:layout_height="50px"/>

    <ImageView
        android:layout_weight="1"
        android:src="@drawable/goods_shopping_cart"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"/>

    <ImageView
        android:layout_weight="1"
        android:src="@drawable/share_normal"
        android:layout_width="0px"
        android:layout_height="wrap_content"/>
</LinearLayout>

    <LinearLayout
        android:id="@+id/invis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/show_t1"
            android:textSize="18dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="产品详情"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#413636"
            />
        <TextView
            android:id="@+id/show_t2"
            android:textSize="18dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="产品参数"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#413636"
            />
        <TextView
            android:id="@+id/show_t3"
            android:textSize="18dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="评论"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#413636"
            />
    </LinearLayout>
    <view.MyScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="590px">


         <android.support.v4.view.ViewPager
             android:id="@+id/vp_show"
             android:layout_width="match_parent"
             android:layout_height="580px"
           >
         </android.support.v4.view.ViewPager>
         <LinearLayout
             android:padding="5dp"
             android:gravity="center"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/show_ll"
             android:layout_alignBottom="@+id/vp_show"
             ></LinearLayout>
     </RelativeLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:orientation="horizontal"
         android:layout_height="160px">
         <LinearLayout
             android:layout_weight="4"
             android:layout_width="0px"
             android:orientation="horizontal"
             android:layout_height="160px">

             <LinearLayout

                 android:layout_weight="4"
                 android:layout_width="0px"
                 android:orientation="vertical"
                 android:layout_height="160px">
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="高哥"
                     android:id="@+id/goods_name"
                     android:padding="10px"
                     android:textColor="#2e2d2d"
                     />
                 <LinearLayout
                     android:orientation="horizontal"
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent">

                     <TextView
                         android:id="@+id/shop_price"
                         android:textSize="18sp"
                         android:padding="10px"
                         android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                         android:text="猴哥"
                         android:textColor="#df6565"
                         />

                     <TextView
                         android:id="@+id/mark_price"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="mc小钱"
                         android:padding="10px"
                         android:textColor="#2e2d2d"
                         />
                     <ImageView
                         android:src="@drawable/collection"
                         android:layout_width="80px"
                         android:layout_height="60px"/>

                     <ImageView
                         android:src="@drawable/collection"
                         android:layout_width="80px"
                         android:layout_height="60px"/>
                 </LinearLayout>

             </LinearLayout>
         </LinearLayout>

         <LinearLayout
             android:layout_weight="1"
             android:layout_width="0px"
             android:orientation="vertical"
             android:layout_height="100px">
             <ImageView
                 android:layout_gravity="center_horizontal"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/collection"
                 />
             <TextView
                 android:text="收藏"
                 android:gravity="center"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"/>
         </LinearLayout>
     </LinearLayout>
     <LinearLayout
         android:orientation="horizontal"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <LinearLayout
             android:orientation="horizontal"
             android:layout_weight="1"
             android:layout_width="0px"
             android:layout_height="wrap_content">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="运费:"
                 android:padding="5px"
                 android:textColor="#463e3e"
                 />

             <TextView
                 android:textColor="#df6565"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="陈乔恩"
                 android:padding="5px"

                 android:id="@+id/textView"/>
         </LinearLayout>
         <LinearLayout
             android:orientation="horizontal"
             android:layout_weight="1"
             android:layout_width="0px"
             android:layout_height="wrap_content">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="销量:"
                 android:padding="5px"
                 android:textColor="#463e3e"
                 />

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="陈乔恩"

                 android:textColor="#df6565"
                 android:padding="5px"

                 />
         </LinearLayout>

         <LinearLayout
             android:gravity="right"
             android:orientation="horizontal"
             android:layout_weight="1"
             android:layout_width="0px"
             android:layout_height="wrap_content">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="收藏:"
                 android:padding="5px"
                 android:textColor="#463e3e"
                 android:id="@+id/textView2"/>

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="80"
                 android:padding="5px"
                 android:textColor="#df6565"
                 />

     </LinearLayout>
     </LinearLayout>
     <view.MyListView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/show_MylistView"
         ></view.MyListView>

                <view.MyListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/show_listView_three"
                    ></view.MyListView>


       </LinearLayout>
    </view.MyScrollView>
    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/public_contact_service_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/public_contact_service_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:gravity="center_vertical"
                android:text="客服" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fbd140"
                android:text="加入购物车"
                android:textColor="#fff" />

            <Button
                android:id="@+id/buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fc6b87"
                android:text="立即购买"
                android:textColor="#fff" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>