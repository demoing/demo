<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:background="#f1f1eaea"
              android:layout_height="wrap_content">

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="160px">
        <ImageView

            android:id="@+id/add_imagView"
            android:layout_margin="10px"
            android:src="@mipmap/ic_launcher"
            android:layout_width="150px"
            android:layout_height="150px"/>
        <LinearLayout
            android:layout_margin="10px"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:orientation="vertical"
            >
            <TextView
                android:textColor="#f00"
                android:id="@+id/pop_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥89.9"
                android:padding="5px"
                />
            <TextView
                android:id="@+id/pop_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥89.9"
                android:padding="5px"
                />
            <TextView
                android:id="@+id/pop_xiangou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥89.9"
                android:padding="5px"
                />

        </LinearLayout>
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"

          >
          <ImageView
              android:id="@+id/dis"
              android:layout_alignParentRight="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/dialog_close"/>
      </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:text="购买数量:"
            android:layout_margin="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
            <Button
                android:id="@+id/pop_jian"
                android:background="@drawable/reduce_able"
                android:gravity="center_vertical"
                android:layout_margin="30px"
                android:layout_width="40px"
                android:layout_height="10px"/>
            <TextView
                android:id="@+id/pop_cots"
                android:text="1"
                android:layout_margin="30px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/pop_jia"
                android:background="@drawable/add_able"
                android:gravity="center_vertical"
                android:layout_margin="30px"
                android:layout_width="40px"
                android:layout_height="40px"/>

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f00"
        ></View>
    <RelativeLayout
        android:layout_margin="10px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <Button
        android:id="@+id/add_quer"
        android:text="确定"
        android:background="#a8d75088"
       android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>
